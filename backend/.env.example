# ===========================================
# Forensic Council Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -------------------
# Application Settings
# -------------------
APP_NAME=forensic_council
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# -------------------
# Redis Configuration
# -------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# -------------------
# Qdrant Configuration
# -------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=

# -------------------
# PostgreSQL Configuration
# -------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=forensic_user
POSTGRES_PASSWORD=forensic_pass
POSTGRES_DB=forensic_council

# Database URL (constructed from above or override)
DATABASE_URL=postgresql://forensic_user:forensic_pass@localhost:5432/forensic_council

# -------------------
# OpenAI Configuration
# -------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# -------------------
# LangChain Configuration
# -------------------
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=forensic_council

# -------------------
# Storage Configuration
# -------------------
EVIDENCE_STORAGE_PATH=./storage/evidence
CALIBRATION_MODELS_PATH=./storage/calibration_models

# -------------------
# Security Configuration
# -------------------
# Key for signing audit trail entries (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SIGNING_KEY=your-signing-key-here-change-in-production

# -------------------
# Agent Configuration
# -------------------
DEFAULT_ITERATION_CEILING=20
HITL_ENABLED=true
